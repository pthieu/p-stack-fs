{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "request": "launch",
      "type": "node-terminal",
      "command": "pnpm dev",
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Current file (TS)",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceRoot}/node_modules/tsx/dist/cli.js",
      "args": [
        "${file}"
      ],
    }
  ],
}
